<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework> 
    <OutputPath>..\..\@Assemblies\</OutputPath>
    <DocumentationFile>..\..\@Assemblies\netstandard2.0\Olive.Hangfire.xml</DocumentationFile>
    <PackageId>Olive.Hangfire</PackageId>
    <PackageVersion>1.0.39</PackageVersion>
    <Title>Olive Hangfire (Service)</Title>
    <Authors>Geeks Ltd</Authors>
    <PackageProjectUrl>https://github.com/Geeksltd/Olive</PackageProjectUrl>
    <PackageIconUrl>http://licensing.msharp.co.uk/Images/OliveComponent.png</PackageIconUrl>
    <Copyright>Copyright ©2018 Geeks Ltd - All rights reserved.</Copyright>
    <Description>Olive Framework</Description>
    
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <NoWarn>1701;1702;1705;1591;NU1701</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="GCop.All.Geeks" Version="2.3.9" />
    <PackageReference Include="GCop.UAT" Version="1.3.7" />
    <PackageReference Include="HangFire" Version="1.6.20" />
    <PackageReference Include="Microsoft.AspNetCore.App" Version="2.1.4" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="2.1.1" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Olive">
      <HintPath>..\..\@Assemblies\netstandard2.0\Olive.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="Olive.Mvc">
      <HintPath>..\..\@Assemblies\netcoreapp2.1\Olive.Mvc.dll</HintPath>
    </Reference>
    <Reference Include="Olive.Web">
      <HintPath>..\..\@Assemblies\netcoreapp2.1\Olive.Web.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="update-local-nuget-cache $(ProjectPath) $(TargetPath) $(TargetName)" />
  </Target>

</Project>
