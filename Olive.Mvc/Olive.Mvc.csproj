<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>..\@Assemblies\</OutputPath>
    <DocumentationFile>..\@Assemblies\netcoreapp2.0\Olive.Mvc.xml</DocumentationFile>
    <NoWarn>1701;1702;1705;1591;1573</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.All" Version="2.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Http" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Olive">
      <HintPath>..\@Assemblies\netcoreapp2.0\Olive.dll</HintPath>
    </Reference>
    <Reference Include="Olive.Entities">
      <HintPath>..\@Assemblies\netcoreapp2.0\Olive.Entities.dll</HintPath>
    </Reference>
    <Reference Include="Olive.Entities.Data">
      <HintPath>..\@Assemblies\netcoreapp2.0\Olive.Entities.Data.dll</HintPath>
    </Reference>
    <Reference Include="Olive.Security">
      <HintPath>..\@Assemblies\netcoreapp2.0\Olive.Security.dll</HintPath>
    </Reference>
    <Reference Include="Olive.Services.Testing">
      <HintPath>..\@Assemblies\netcoreapp2.0\Olive.Services.Testing.dll</HintPath>
    </Reference>
    <Reference Include="Olive.Web">
      <HintPath>..\@Assemblies\netcoreapp2.0\Olive.Web.dll</HintPath>
    </Reference>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="powershell start-process dotnet &quot;$(TargetDir)PushForLocalTesting.dll&quot;" />
  </Target>

</Project>
