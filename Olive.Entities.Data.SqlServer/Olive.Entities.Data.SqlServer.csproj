<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>Olive.Entities.Data</RootNamespace>
    <WarningsAsErrors>NU1605</WarningsAsErrors>
    <NoWarn>1701;1702;1705;1591;1573;NU1701</NoWarn>
    <OutputPath>..\@Assemblies</OutputPath>
    <DocumentationFile>..\@Assemblies\netstandard2.0\Olive.Entities.Data.SqlServer.xml</DocumentationFile>
    <PackageId>Olive.Entities.Data.SqlServer</PackageId>
    <Version>1.0.33</Version>
    <Title>Olive Entities Data SqlServer</Title>
    <Authors>Geeks Ltd</Authors>
    <PackageProjectUrl>https://github.com/Geeksltd/Olive</PackageProjectUrl>
    <PackageIconUrl>http://licensing.msharp.co.uk/Images/OliveComponent.png</PackageIconUrl>
    <Copyright>Copyright Â©2018 Geeks Ltd - All rights reserved.</Copyright>
    <Description>Olive Framework</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>
 
  <ItemGroup>
    <PackageReference Include="GCop.All.Geeks" Version="2.4.4" />
    <PackageReference Include="GCop.UAT" Version="1.3.7" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="2.1.1" />
    <PackageReference Include="System.Data.SqlClient" Version="4.5.1" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Olive">
      <HintPath>..\@Assemblies\netstandard2.0\Olive.dll</HintPath>
    </Reference>
    <Reference Include="Olive.Entities">
      <HintPath>..\@Assemblies\netstandard2.0\Olive.Entities.dll</HintPath>
    </Reference>
    <Reference Include="Olive.Entities.Data">
      <HintPath>..\@Assemblies\netstandard2.0\Olive.Entities.Data.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="powershell start-process dotnet &quot;$(TargetDir)PushForLocalTesting.dll&quot;&#xD;&#xA;update-local-nuget-cache $(ProjectPath) $(TargetPath) $(TargetName)" />
  </Target>

</Project>
