<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <OutputPath>..\@Assemblies\</OutputPath>
    <DocumentationFile>..\@Assemblies\netstandard2.0\Olive.Entities.Data.xml</DocumentationFile>
    <NoWarn>1701;1702;1705;1591;1573;NU1701</NoWarn>
    <PackageId>Olive.Entities.Data</PackageId>
    <PackageVersion>1.0.70</PackageVersion>
    <Title>Olive Entities Data</Title>
    <Authors>Geeks Ltd</Authors>
    <PackageProjectUrl>https://github.com/Geeksltd/Olive</PackageProjectUrl>
    <PackageIconUrl>http://licensing.msharp.co.uk/Images/OliveComponent.png</PackageIconUrl>
    <Copyright>Copyright ©2018 Geeks Ltd - All rights reserved.</Copyright>
    <Description>Olive Framework</Description>    
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="GCop.All.Geeks" Version="2.3.9" />
    <PackageReference Include="GCop.UAT" Version="1.3.7" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="2.1.1" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="2.1.1" />
  </ItemGroup>
  
  <ItemGroup>
    <Reference Include="Olive">
      <HintPath>..\@Assemblies\netstandard2.0\Olive.dll</HintPath>
    </Reference>
    <Reference Include="Olive.Audit">
      <HintPath>..\@Assemblies\netstandard2.0\Olive.Audit.dll</HintPath>
    </Reference>
    <Reference Include="Olive.Encryption">
      <HintPath>..\@Assemblies\netstandard2.0\Olive.Encryption.dll</HintPath>
    </Reference>
    <Reference Include="Olive.Entities">
      <HintPath>..\@Assemblies\netstandard2.0\Olive.Entities.dll</HintPath>
    </Reference>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="powershell start-process dotnet &quot;$(TargetDir)PushForLocalTesting.dll&quot;&#xD;&#xA;update-local-nuget-cache $(ProjectPath) $(TargetPath) $(TargetName)" />
  </Target>

</Project>